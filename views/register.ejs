<%- include("partials/register.ejs") %>
<form action="/register " method="POST" enctype='multipart/form-data'>
    <div class="container">
        <div class="text-white">
            <div class="register--form">
                <a class="register--form__back" href="javascript:history.back()">
                    <img src="/image/icons/back.png" width="30vh">
                </a>
                <div class="register--form__logo">
                    <img src="/image/icons/webicon.png" width="10%">
                </div>
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" name="username" placeholder="Enter your username" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Enter your password" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" name="firstname" placeholder="Your first name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Last Name</label>
                    <input type="text" class="form-control" name="lastname" placeholder="Your last name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">E-mail</label>
                    <input type="email" class="form-control" name="email" placeholder="Your e-mail address">
                </div>
                <div class="mb-3">
                    <label class="form-label">Profile image</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label">Admin code</label>
                    <input type="text" class="form-control" name="adminCode" placeholder="Type admin code here">
                </div> -->
                <button type="submit" class="btn btn-info">Register</button>
                <a href="/login">Have an account?</a>
            </div>
        </div>
    </div>
</form>
<%- include("partials/LRfooter.ejs") %>