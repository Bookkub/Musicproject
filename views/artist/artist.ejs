<%- include("../partials/header.ejs") %>
<div class="col py-4">
  <div class="album">
    <div class="container-fluid">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-6 g-3">
        <% artist.forEach(function(artist){ %>
          <div class="col">
            <div class="card shadow-lg">
              <div class="card-body">
                <a class="text-decoration-none" href="/artist/<%= artist._id %>">
                  <img class="artist--img" src="<%= artist.image %>">
                  <p class="artist--name text-white text-center">
                    <%= artist.name %>
                  </p>
                </a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>