<%- include("../partials/header.ejs") %>
<div class="col pt-4">
    <div class="container-fluid">
        <ul class="nav nav-tabs">
            <li class="nav-item">
              <a class="nav-link" href="/">Songs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/artist/new">Artists</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page"  href="/album/new">Albums</a>
            </li>
          </ul>
        <h1 class="text-white pt-4">Add New Album</h1>
        <form action="/album" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label  class="form-label text-white">Album Name</label>
                <input type="text" class="form-control" name="album" placeholder="Album Name" required>
            </div>
            <div class="mb-3">
                <label class="form-label text-white">Image</label>
                <input type="file" class="form-control" name="image" accept='image/*' required>
            </div>
            <div class="mb-3">
                <label class="form-label text-white">Artist Name</label>
                <input type="text" list="artist" class="form-control" name="artist" placeholder="Artist Name" autocomplete="off" required>
                <datalist id="artist">
                  <% artist.forEach(function(artist){ %>
                  <option class="list-group-item"><%= artist.name %></option>
                  <% }) %>
              </datalist>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<%- include("../partials/footer.ejs") %>